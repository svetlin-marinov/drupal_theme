      "flex-basis",
      "flex-direction",
      "flex-flow",
      "flex-grow",
      "flex-shrink",
      "flex-wrap",
      "grid",
      "grid-area",
      "grid-auto-rows",
      "grid-auto-columns",
      "grid-auto-flow",
      "grid-gap",
      "grid-row",
      "grid-row-start",
      "grid-row-end",
      "grid-row-gap",
      "grid-column",
      "grid-column-start",
      "grid-column-end",
      "grid-column-gap",
      "grid-template",
      "grid-template-areas",
      "grid-template-columns",
      "grid-template-rows",
      "align-content",
      "align-items",
      "align-self",
      "column-gap",
      "row-gap",
      "gap",
